{
  "name": "video-generator-service",
  "version": "2.0.0",
  "description": "Production-ready educational video generation service with Supabase integration",
  "main": "production_server.js",
  "scripts": {
    "start": "node production_server.js",
    "start:production": "NODE_ENV=production node production_server.js",
    "start:dev": "NODE_ENV=development nodemon production_server.js",
    "build:production": "echo 'No build step required for Node.js service'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint *.js --fix",
    "health-check": "curl -f http://localhost:${PORT:-3000}/health || exit 1",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "logs": "railway logs --follow",
    "deploy": "railway deploy",
    "db:reset": "node scripts/reset-db.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@supabase/supabase-js": "^2.39.0",
    "body-parser": "^2.2.0",
    "canvas": "^2.11.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "multer": "^2.0.1",
    "uuid": "^11.1.0",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "education",
    "video-generation",
    "llm",
    "canvas",
    "ffmpeg",
    "supabase",
    "railway",
    "production",
    "api",
    "microservice"
  ],
  "author": "Educational Video Generator Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/video-generator-service.git"
  },
  "homepage": "https://github.com/your-repo/video-generator-service#readme",
  "bugs": {
    "url": "https://github.com/your-repo/video-generator-service/issues"
  }
}